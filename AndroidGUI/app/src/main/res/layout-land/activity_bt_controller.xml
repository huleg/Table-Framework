<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.remote.btcontroller.ControllerActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_up"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="Up"
        android:textSize="14sp"
        android:layout_above="@+id/btn_left"
        android:layout_toEndOf="@+id/btn_left" />

    <Button
        android:id="@+id/btn_down"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="Down"
        android:textSize="14sp"
        android:layout_below="@+id/btn_left"
        android:layout_toEndOf="@+id/btn_left" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="A"
        android:textSize="14sp"
        android:layout_alignTop="@+id/btn_right"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="B"
        android:textSize="14sp"
        android:layout_below="@+id/btn_right"
        android:layout_toStartOf="@+id/btn_a" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="Left"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="Right"
        android:textSize="14sp"
        android:layout_below="@+id/btn_up"
        android:layout_toEndOf="@+id/btn_up" />

    <ToggleButton
        android:id="@+id/btn_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="Clock"
        android:textOff="Clock Off"
        android:textOn="Clock On" />

</RelativeLayout>
